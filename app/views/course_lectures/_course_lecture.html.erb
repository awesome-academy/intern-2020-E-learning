<% active = course_lecture.id.eql?(@course_lecture&.id) %>
<li class="list-group-item <%= "active" if active %>">
  <div class="container">
    <div class="d-flex w-100 justify-content-between">
        <p class="mb-1">
          <%= course_lecture_counter + 1 %>.
          <%= link_to course_lecture.name,
              course_lecture_path(number: course_lecture.number,
                                  id: course_lecture.id,
                                  course_id: course_lecture.course_id) %>
        </p>
        <div>
          <% if learned_lecture? course_lecture %>
            <span class="badge badge-success"><%= t "status.learned" %></span>
          <% end %>
        </div>
      </div>
  </div>
</li>
