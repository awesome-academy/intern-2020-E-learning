<div class="form-group">
  <%= form.label :name do %>
    <%= t "field.name" %><span> *</span>
  <% end %>
  <%= form.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :birthday do %>
    <%= t "field.birthday" %><span> *</span>
  <% end %>
  <%= form.date_field :birthday, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :location, t("field.location") do %>
    <%= t "field.location" %><span> *</span>
  <% end %>
  <%= form.text_field :location, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :workplace, t("field.workplace") %>
  <%= form.text_field :workplace, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :status, t("field.status") %>
  <%= form.collection_select :status, UserDetail.statuses.keys, :to_s, :to_s %>
</div>
