<div class="nested-fields">
  <div class="form-group">
    <%= f.label :name, t("field.name") %>
    <%= f.text_field :name, class: "form-control" %>
    <%= display_error f.object, :estimate_time, t("field.estimate_time") %>
  </div>

  <div class="form-group">
    <%= f.label :number, t("field.number") %>
    <%= f.text_field :number, class: "form-control" %>
    <%= display_error f.object, :estimate_time, t("field.estimate_time") %>
  </div>

  <div class="form-group">
    <%= f.label :video_link, t("field.video_link") %>
    <%= f.text_field :video_link, class: "form-control" %>
    <%= display_error f.object, :estimate_time, t("field.estimate_time") %>
  </div>

  <div class="hide"><%= f.check_box "_destroy" %></div>
</div>
