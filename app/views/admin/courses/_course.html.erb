<tr>
  <td class="col-1"><%= page_index params[:page], course_counter, Settings.per %></td>
  <td class="col-2"><%= course.name %></td>
  <td class="col-3"><%= course.description %></td>
  <td class="col-1"><%= course.status %></td>
  <td class="col-3"><%= course.estimate_time %></td>
  <td class="col-2">
    <div class="inline-item">
      <%= link_to edit_admin_course_path(course), {class: "btn btn-primary"} do %>
        <i class="fas fa-pen"></i>
      <% end %>
    </div>
    <div class="inline-item">
      <%= link_to admin_course_path(
        id: course.id,
        course: {status: "expired"},
        page: params[:page]),
        method: :patch,
        data: {confirm: t("message.confirm_delete")},
        class: "btn btn-danger" do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </div>
    <% if course.user_courses.by_status("pending").count != 0 %>
      <span class="dot">
        <%= course.user_courses.by_status("pending").count %>
      </span>
    <% end %>
  </td>
</tr>
