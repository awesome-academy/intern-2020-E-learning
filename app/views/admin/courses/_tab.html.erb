<div class="container">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="lecture-tab" data-toggle="tab" href="#lectures" role="tab" aria-controls="lectures" aria-selected="true">
        <%= t "common.lectures" %> (<%= @lectures.length if @lectures %>)
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="student-tab" data-toggle="tab" href="#student" role="tab" aria-controls="student" aria-selected="false">
        <%= t "common.students" %> (<%= @users.length if @users %>)
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="student-tab" data-toggle="tab" href="#categories" role="tab" aria-controls="categories" aria-selected="false">
        <%= t "common.categories" %> (<%= @categories.length if @categories %>)
      </a>
    </li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active" id="lectures" role="tabpanel" aria-labelledby="home-tab">
      <div id="lectures">
        <%= render "admin/courses/tab/lecture_table" %>
      </div>
    </div>
    <div class="tab-pane" id="student" role="tabpanel" aria-labelledby="student-tab">
      <%= render "admin/courses/tab/student_table" %>
    </div>
    <div class="tab-pane" id="categories" role="tabpanel" aria-labelledby="categories-tab">
      <%= render "admin/courses/tab/category_table" %>
    </div>
  </div>
</div>
