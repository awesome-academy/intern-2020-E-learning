<tr>
  <td class="col-md-1">
    <%= page_index params[:page], course_counter, Settings.per %>
  </td>
  <td><%= course.name %></td>

  <td><%= course.course_lectures_count %></td>

  <td><%= course.user_courses_count %></td>

  <td>
    <div class="inline-item">
      <%= link_to admin_student_management_path(course), {class: "btn btn-light"} do %>
        <i class="fas fa-eye"></i>
      <% end %>
    </div>
    <% unless course.expired? %>
      <div class="inline-item">
        <%= link_to admin_student_management_path(
          id: course.id,
          course: {status: "expired"},
          page: params[:page]),
          method: :patch,
          data: {confirm: t("message.confirm_delete")},
          class: "btn btn-danger" do %>
          <%= t "common.expire_course" %>
        <% end %>
      </div>
    <% end %>
  </td>
</tr>
