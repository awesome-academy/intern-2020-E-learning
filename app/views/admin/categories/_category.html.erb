<tr id="<%= category.id %>">
  <td class="col-1">
    <% if defined? category_counter %>
      <%= page_index params[:page], category_counter, Settings.per %>
    <% end %>
  </td>
  <td class="col-3"><%= category.name %></td>
  <td class="col-5"><%= category.description %></td>
  <td class="col-3">
    <div class="inline-item">
      <%= link_to edit_admin_category_path(category),
          {class: "btn btn-primary"} do %>
        <i class="fas fa-pen"></i>
      <% end %>
    </div>
    <div class="inline-item">
      <%= link_to admin_category_path(category, page: params[:page] || 1),
          method: :delete,
          remote: true,
          class: "btn btn-danger" do %>
          <i class="fas fa-trash"></i>
      <% end %>
    </div>
  </td>
</tr>
