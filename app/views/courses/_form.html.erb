<%= form_for @course do |f| %>
  <%= f.label :name, t("course.name") %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :status, t("course.status") %>
  <%= f.collection_select :status, Course.statuses.keys, :to_s, :to_s %>
  <br>

  <%= f.label :description, t("course.description") %>
  <%= f.text_area :description, class: "form-control" %>

  <%= f.label :estimate_time, t("course.estimate_time") %>
  <%= f.date_field :estimate_time, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
