<% provide :title, t("common.courses") %>

<div class="container">
  <h2><%= t "common.courses" %></h2>
  <div class="search-border">
    <%= render "search_form" %>
  </div>
  <div>
    <%= link_to t("course.new"), new_course_path, {class: "btn btn-primary"} %>
  </div>
  <div>
    <table class="table">
      <thead>
        <tr>
          <th class="col-md-1"><%= t "field.num_order" %></th>
          <th class="col-md-2"><%= t "field.name" %></th>
          <th class="col-md-4"><%= t "field.description" %></th>
          <th class="col-md-1"><%= t "field.status" %></th>
          <th class="col-md-2"><%= t "field.estimate_time" %></th>
          <th class="col-md-2"></th>
        </tr>
      </thead>
      <tbody id="courses">
        <%= render @courses %>
      </tbody>
    </table>
    <div class="paginator" id="courses-paginate">
      <%= paginate @courses, remote: true, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</div>
