<%= provide :title, t("common.my_courses") %>

<div class="container-fluid">
  <h1><%= t "common.my_courses" %></h1>
  <div class="row">
    <% if current_user %>
      <div class="col-md-12">
        <%= status_filter %>
      </div>
    <% end %>
  </div>
  <div class="container">
    <div>
      <div class="courses" id="courses">
        <%= render collection: @courses, partial: "my_courses/course" %>
        <% if @courses.blank? %>
          <p><%= t "common.no_course_found" %></p>
        <% end %>
      </div>
      <div class="paginator" id="courses-paginate">
        <%= paginate @courses, remote: true, theme: "twitter-bootstrap-3" %>
      </div>
    </div>
  </div>
</div>
