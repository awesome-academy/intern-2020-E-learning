<div class="container-fluid">
  <div class="row">
    <div class="col-12 mt-3">
      <div class="card">
        <div class="card-horizontal">
          <div class="img-square-wrapper">
            <%= image_tag "index.jpeg",
              {alt: t("course.picture_alt"), class: "course-image"} %>
          </div>
          <div class="card-body">
            <%= link_to course.name,
              new_user_course_path(course_id: course.id),
              {class: "card-title h4"} %>
            <% if current_user %>
              <%= status_badges course.user_courses&.first.status %>
            <% end %>
            <p class="card-text"><%= course.description %></p>
          </div>
        </div>
        <div class="card-footer">
          <small class="text-muted"><%= course.updated_at %></small>
        </div>
      </div>
    </div>
  </div>
</div>
