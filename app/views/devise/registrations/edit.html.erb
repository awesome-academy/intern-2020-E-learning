<h2><%= t "common.edit" %> <%= resource_name.to_s.humanize %></h2>

<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put } do |f| %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <%= display_error f.object, :email, t("field.email") %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t "common.waiting" %> <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i><%= t "common.leave_blank" %></i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> <%= t "common.character_minimum" %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <%= display_error f.object, :password_confirmation, t("field.password_confirmation") %>
  </div>

  <div class="field">
    <%= f.label :current_password %>
    <i>
      <%= t "common.require_current_password" %>
    </i>
    <br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
    <%= display_error f.object,
        :current_password,
        t("field.current_password") %>
  </div>

  <div class="actions">
    <%= f.submit t("button.update") %>
  </div>
<% end %>

<h3><%= t "common.cancel_account" %></h3>

<p><%= t "common.unhappy" %> <%= button_to t("button.cancel_my_account"),
                                           registration_path(resource_name),
                                           data: { confirm: "Are you sure?" },
                                           method: :delete %></p>

<%= link_to t("button.back"), :back %>
