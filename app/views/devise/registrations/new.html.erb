<% provide :title, t("common.signup") %>

<div class="wrapper fadeInDown">
  <div id="formContent">
    <h1><%= t "common.sign_up" %></h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :email, t("field.email") %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, t("field.password") %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, t("field.password_confirmation") %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit t("common.sign_up") %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
