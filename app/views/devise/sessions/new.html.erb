<% provide :title, t("common.login") %>

<div class="wrapper fadeInDown">
  <div id="formContent">
    <div class="fadeIn first">
      <%= image_tag "login_icon_2", id: "icon" %>
    </div>
    <%= form_for resource,
        as: resource_name,
        url: session_path(resource_name) do |f| %>
      <div class="field form-group fadeIn second">
        <%= f.label :email, t("field.email") %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field form-group fadeIn third">
        <%= f.label :password, t("field.password") %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, t("field.remember_me") %>
        </div>
      <% end %>

      <div class="actions fadeIn fourth">
        <%= f.submit t("common.login") %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
