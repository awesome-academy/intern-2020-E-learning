<%= provide :title, t("common.courses") %>

<div class="container-fluid">
  <h1><%= t "common.courses" %></h1>
  <div class="row">
    <div class="col-md-3 categories">
      <div class="list-categories">
        <ul class="list-group">
          <%= render collection: @categories,
            partial: "user_courses/category" %>
        </ul>
      </div>
    </div>

    <div class="col-md-9">
      <div class="courses" id="courses">
        <%= render collection: @courses, partial: "user_courses/course" %>
        <% if @courses.blank? %>
          <p><%= t "common.no_course_found" %></p>
        <% end %>
      </div>
      <div class="paginator" id="courses-paginate">
        <%= paginate @courses, remote: true, theme: "twitter-bootstrap-3" %>
      </div>
    </div>
  </div>
</div>
